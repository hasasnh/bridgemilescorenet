@model Bridgemiles.Core.Net.Menu.ViewModels.HeroHeadingViewModel

@{

    <!--begin::Landing hero-->
    <div class="d-flex flex-column flex-center w-100 min-h-350px min-h-lg-500px px-9">
        <div class="text-center mb-5 mb-lg-10 py-10 py-lg-20">
            <!--begin::Title-->
            <h1 class="text-white lh-base fw-bolder fs-2x fs-lg-3x mb-15">
                @Model.Title
                <br>with
                <span style="background: linear-gradient(to right, #12CE5D 0%, #FFD80C 100%);-webkit-background-clip: text;-webkit-text-fill-color: transparent;">
                    <span id="kt_landing_hero_text">The Best CMS's Ever</span>
                </span>
            </h1>
            <!--end::Title-->
            <!--begin::Action-->
            <a href="@Model.Url" class="btn btn-primary">@Model.Text</a>
            <!--end::Action-->
        </div>

        <div class="d-flex flex-center flex-wrap position-relative px-5">
            @{
                foreach (var client in @Model.Clients)
                {
                    <!--begin::Client-->
                    <div class="d-flex flex-center m-3 m-md-6" data-bs-toggle="tooltip" title="@client.logo">
                        <img src="/media/@client.link" class="mh-30px mh-lg-40px" alt="" />
                    </div>
                    <!--end::Client-->
                }
            }
        </div>
    </div>
    <!--end::Landing hero-->
}